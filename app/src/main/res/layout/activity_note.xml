<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.nsu.ccfit.pleshkov.notebook.view.NoteActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/newNoteToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:text=""
        android:textStyle="bold"
        android:hint="@string/header_hint"
        android:background="@drawable/edit_text_background"
        android:id="@+id/noteHeader"
        android:textSize="@dimen/new_header_text_size"
        android:padding="@dimen/new_header_padding"
        android:layout_marginStart="@dimen/header_margin"
        android:layout_marginLeft="@dimen/header_margin"
        android:layout_marginEnd="@dimen/header_margin"
        android:layout_marginRight="@dimen/header_margin"
        android:layout_marginBottom="@dimen/header_margin"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <EditText
        android:text=""
        android:hint=""
        android:gravity="top|start"
        android:id="@+id/noteText"
        android:textSize="@dimen/new_content_text_size"
        android:layout_marginStart="@dimen/header_margin"
        android:layout_marginLeft="@dimen/header_margin"
        android:layout_marginEnd="@dimen/header_margin"
        android:layout_marginRight="@dimen/header_margin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</LinearLayout>
