<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/noteDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/header_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:minWidth="@dimen/date_width"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/header_text_size" />

    <TextView
        android:id="@+id/noteHeader"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_size"
        android:layout_alignLeft="@id/noteDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@id/noteDate"
        android:layout_margin="@dimen/header_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/header_text_size" />

    <TextView
        android:id="@+id/noteText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_size"
        android:layout_below="@id/noteHeader"
        android:layout_margin="@dimen/content_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/content_text_size" />
</RelativeLayout>